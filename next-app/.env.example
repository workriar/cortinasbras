# Configurações de Ambiente - Cortinas Brás (TEMPLATE)
# Copie este arquivo para .env.local e preencha com suas credenciais

# Ambiente de produção (1 = produção, 0 ou vazio = desenvolvimento)
PRODUCTION=1

# Chave secreta (GERE UMA CHAVE FORTE EM PRODUÇÃO!)
SECRET_KEY=your-secret-key-here

# Configurações de Email (Cronos/Hostinger)
MAIL_SERVER=mail.cronos-painel.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_USERNAME=your-email@cortinasbras.com.br
MAIL_PASSWORD=your-password-here
MAIL_DEFAULT_SENDER=your-email@cortinasbras.com.br

# Banco de dados
DATABASE_URL=sqlite:///leads.db

# Porta da aplicação
PORT=5000
