:root {
  --ouro: #7a5a1a;
  --ouro-hover: #5a4313;
  --fundo: #181818;
  --branco: #fff;
  --cinza: #f5f5f5;
  --cinza-escuro: #222;
  --borda: #333;
  --input-bg: #232323;
  --input-border: #444;
  --input-focus: #a88a4a;
}

body {
  background: var(--fundo);
  color: var(--branco);
  font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
  min-height: 100vh;
  text-align: left;
}

.logo {
  /* ~30% larger than previous 200px -> max ~260px, responsive using clamp */
  width: clamp(120px, 18vw, 260px);
  max-width: 100%;
  height: auto;
  margin: 0;
  display: inline-block;
  transition: transform 160ms ease, width 160ms ease;
}

.text-gold { color: var(--ouro) !important; }

.bg-dark {
  background-color: var(--fundo) !important;
  color: var(--branco);
}

.btn-warning {
  background: var(--ouro);
  border: none;
  color: #fff;
  font-weight: 600;
  letter-spacing: 0.5px;
  box-shadow: 0 2px 8px #0002;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}
.btn-warning:hover, .btn-warning:focus {
  background: var(--ouro-hover);
  color: #fff;
  box-shadow: 0 4px 16px #0003;
}

input, select, textarea {
  background: var(--input-bg);
  border: 1.5px solid var(--input-border);
  color: var(--branco);
  border-radius: 8px;
  padding: 0.5em 1em;
  font-size: 1rem;
  transition: border 0.2s, box-shadow 0.2s;
  margin-bottom: 0.5em;
}
input:focus, select:focus, textarea:focus {
  border-color: var(--input-focus);
  outline: none;
  box-shadow: 0 0 0 2px var(--ouro-hover)33;
}

.carousel-inner img {
  object-fit: cover;
  min-height: 320px;
  max-height: 420px;
}

/* Map responsive sizing */
.map-container {
  width: 100%;
  height: 350px; /* default */
  border-radius: 8px;
  overflow: hidden;
  transition: height 0.25s ease; /* smooth resize */
  will-change: height;
}
.map-container .map-iframe {
  width: 100%;
  height: 100%;
  border: 0;
  display: block;
}

/* Small mobile: very narrow screens (breakpoint 300px) */
@media (max-width: 300px) {
  .map-container { height: 220px; }
}

/* Mobile: up to small tablets */
@media (max-width: 480px) {
  .map-container { height: 280px; }
}

/* Large screens */
@media (min-width: 992px) {
  .map-container { height: 450px; }
}

.carousel-indicators button {
  width: 12px; height: 12px;
  border-radius: 50%;
  background: var(--ouro);
  opacity: 0.4;
  border: none;
  margin: 0 4px;
}
.carousel-indicators .active {
  background: var(--ouro);
  opacity: 1;
}

.social-icons {
  display: flex;
  justify-content: center;
  gap: 18px;
  margin-top: 10px;
}
.social-icons a img, .social-icons a svg {
  width: 32px;
  height: 32px;
  filter: none;
  background: var(--ouro);
  border-radius: 50%;
  padding: 6px;
  box-shadow: 0 0 4px #0002;
  transition: filter 0.2s, box-shadow 0.2s;
}
.social-icons a:hover img, .social-icons a:hover svg {
  filter: brightness(1.2) drop-shadow(0 0 2px #fff3);
  box-shadow: 0 0 8px var(--ouro-hover);
}

.whatsapp-float {
  position: fixed;
  bottom: 24px;
  right: 24px;
  z-index: 9999;
  background: var(--ouro);
  border-radius: 50%;
  width: 56px;
  height: 56px;
  box-shadow: 0 4px 16px #0005;
  border: 2.5px solid #fff;
  transition: transform 0.2s, background 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}
.whatsapp-float:hover {
  transform: scale(1.08);
  background: var(--ouro-hover);
}

footer {
  background: var(--cinza-escuro);
  color: var(--ouro);
  border-top: 1.5px solid var(--borda);
  padding: 24px 0 12px 0;
  font-size: 1.05rem;
}

@media (max-width: 768px) {
  .logo { width: clamp(80px, 24vw, 140px); }
  h1, .display-5 { font-size: 1.3rem; }
  .carousel-inner img { min-height: 180px; max-height: 220px; }
  .whatsapp-float { width: 44px; height: 44px; bottom: 12px; right: 12px; }
}

/* subtle hover effect for non-touch devices */
@media (hover: hover) and (pointer: fine) {
  .logo:hover { transform: scale(1.03); }
}

/* respect user preference for reduced motion */
@media (prefers-reduced-motion: reduce) {
  .logo { transition: none; transform: none; }
  .map-container { transition: none; }
}
